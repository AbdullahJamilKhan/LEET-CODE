/**
 * // This is the ArrayReader's API interface.
 * // You should not implement it, or speculate about its implementation
 * class ArrayReader {
 *   public:
 *     int get(int index);
 * };
 */

class Solution {
public:
    int search(const ArrayReader& reader, int target) {
        long long mn=0;
        long long mx=pow(2,31)-1;
        long long y=0;
        while(mx+1>mn){
            long long md=(mx+mn)/2;
            y=reader.get(md-1);
            if( y<target){
                mn=md+1;
            }
            else if(y==target){
                return md-1;
            }
            else{
                mx=md-1;
            }
        }
        return -1;   
        }
};
